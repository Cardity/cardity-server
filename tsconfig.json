{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"sourceMap": true, 
		"outDir": "out/",
		"rootDir": "./",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	}
}
